{
    "compilerOptions": {
        "module": "commonjs",
        "types": ["node", "jest"],
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "exclude": [
        "node_modules/",
        "tests/"
    ]
}
